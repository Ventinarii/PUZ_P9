<Window x:Class="P9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P9"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1800">
    <Canvas x:Name="MyCanvas">
        <Button Content="GO" Click="Button_GO"/>
        <Button Content="Actor +" Canvas.Left="62" Click="Button_ADD"/>
        <Button Content="Actor -" Canvas.Left="21" Click="Button_SUB"/>
        <TextBlock Canvas.Left="106" TextWrapping="Wrap" Text="0" Height="20" x:Name="TextBlockActorCount"/>
        <TextBlock TextWrapping="Wrap" Text="" Canvas.Top="20" Height="400" Width="100" x:Name="Info"/>

    </Canvas>
</Window>
